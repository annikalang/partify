
<div class="header">You have been invited to <%= @party.title %> by <%= @party.user.display_name %></div>

<p class="sub-header">Enter the passcode to join</p>

<div class="d-flex fill">
  <%= simple_form_for @party do |f| %>
  <%= f.input :passcode, as: :string %>
  <div class="smallcolorbutton">
    <div class="whitebackground">
      <div>
        <%= f.button :submit, value: "Join"%>
      </div>
    </div>
  </div>
  <% end %>
</div>



