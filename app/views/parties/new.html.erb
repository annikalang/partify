<head>
    <title>PARTYSPHERE</title>
</head>
<style type="text/css">
  .party_title label {
    margin-bottom: 20px;
  }
  .party_description label {
    margin-bottom: 20px;
  }
  .party_photo label {
    margin-bottom: 20px;
  }

</style>

<%= render 'shared/dropdown' %>

<div class="header">Create a Party</div>

<div class="d-flex fill">
  <%= simple_form_for @party do |f| %>
  <%= f.input :title, as: :string, required: true%>
  <%= f.input :description, as: :string, required: true %>
  <%= f.input :photo, as: :file, required: true %>
  <%= f.input :photo_cache, as: :hidden %>
  <div class="smallcolorbutton">
    <%= f.submit "Let's Go!", class: "whitebackground", id: "whiteback", data: { disable_with: "Creating Party..." }%>
  </div>
  <% end %>
</div>



