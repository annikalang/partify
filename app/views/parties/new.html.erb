<!-- #parties#new -->
<head>
    <title>PARTYSPHERE</title>
</head>

<%= render 'shared/dropdown' %>

<div class="header">Create a Party</div>

<div class="d-flex fill">
  <%= simple_form_for @party do |f| %>
  <%= f.input :title, as: :string%>
  <%= f.input :description, as: :string %>
  <%= f.input :photo, as: :file %>
  <%= f.input :photo_cache, as: :hidden %>
  <div class="smallcolorbutton">
    <div class="whitebackground">
      <div>
        <%= f.button :submit, value: "Let's Go!", data: { disable_with: "Creating Party..." } %>
      </div>
    </div>
  </div>
  <% end %>
</div>





