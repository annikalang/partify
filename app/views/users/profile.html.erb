<div class="mainbodynonav">

  <div class="users-container">
    <!-- USER'S (DEFAULT) IMAGE -->
    <div class="avatar-user">

      <% unless current_user.image.nil? %>
      <%= image_tag current_user.image, class: "profile"%>
      <% else %>
      <%= image_tag("default_image.jpg", size: "160x100", alt: "Default User Image", class: "profile")%>
      <% end %>

    </div>

    <!-- USER'S NAME -->
    <h1 class="header"><%= current_user.display_name %></h1>

    <!-- CREATE PARTY BUTTON -->

    <div class="smallcolorbutton">
      <div class="whitebackground">
        <div>
          <%=link_to "Create a Party", new_party_path %>
        </div>
      </div>
    </div>

    <!-- USER'S PARTY ANALYTICS -->

    <h1 class="sub-header">My analytics</h1>

    <!-- <div class="bigbox"> -->
     <table class="biganalytics">
      <tr class="biganalytics-row">
        <td class="biganalytics-text1">Danceability</td>
        <td class="biganalytics-text2">Energy</td>
      </tr>
      <tr class="biganalytics-row">
        <td class="biganalytics-text3">80%</td>
        <td class="biganalytics-text4">80%</td>
      </tr>
      <tr class="biganalytics-row">
        <td class="biganalytics-text5">Valence</td>
        <td class="biganalytics-text6">Popularity</td>
      </tr>
      <tr class="biganalytics-row">
        <td class="biganalytics-text7">80%</td>
        <td class="biganalytics-text8">80%</td>
      </tr>
    </table>
    <!-- </div> -->

    <!-- USER'S PARTIES LIST -->
    <h1 class="sub-header">My parties</h1>



    <%@parties.each do |party|%>

    <div class="party-card">

      <% unless party.image.nil? %>
      <%= image_tag party.image, class: "party-image"%>
      <% else %>
      <%= image_tag("default_image.jpg", size: "160x100", alt: "Default Party Image", class: "party-image")%>
      <% end %>

      <div class="party-info">
        <%=link_to party.title, party_path(party), class: "party-text"%>
      </div>

    </div>

    <%end%>


  </div>

</div>
