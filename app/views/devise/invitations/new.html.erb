 <h2> Send invitations</h2>

<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="form-inputs">
      <%= f.input :party_as_guest_id, :as => :hidden, :input_html => { :value => @party } %>
      <%= f.input field %>
    </div>
  <% end -%>

  <div class="form-actions">
   <span id="button"><%= f.button :submit, t("devise.invitations.new.submit_button") %></span>
  </div>
<% end %>

<div id ="Invitation-submitted"></div>

<script>
let message = document.querySelector("#Invitation-submitted")
let button = document.querySelector("#button")
button.addEventListener("click",(event)=>{
  event.preventDefault()
  message.insertAdjacentHTML("beforeend",`<p>Invitation Submitted</p>`)
})
</script>
